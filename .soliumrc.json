{
  "extends": "solium:all",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      4
    ],
    "arg-overflow": [
      "warning",
      5
    ],
    "error-reason": 0,
    "security/no-assign-params": 0,
    "security/no-inline-assembly": 0
  }
}
